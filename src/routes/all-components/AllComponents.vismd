  />

  </Cell>

  <Cell>
  
  <Histogram 
    dataPath="data/olympians.csv" 
    xData="weight"
    yData="count"
    fillData="sex"
    titleData="Olympic athletes by weight"
  />

  </Cell>

  <Cell>
  
  <LineChart 
    dataPath="data/unemployment.csv"
    xData="date"
    yData="unemployed"
    fillData="industry"
    titleData="Unemployment by industry over time"
  />

  </Cell>

  <Cell>
    
  <ScatterPlot 
